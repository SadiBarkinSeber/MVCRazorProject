<h1>Razor View Engine</h1>

<!--İsim soyisim ve yaş değişkenleri olsun bunlara değer atayın bunları ekranda gösterin-->
@{
    string ad = "Barkın";
    string soyad = "Şeber";
    int yas = 25;

}
<p>@ad @soyad @yas</p>

<!--Eğer yaş 20 den küçük ise .. yaşı 20 den küçüktür değilse büyüktür-->
@{
    if (@yas > 20)
    {
        <p>@ad ın yaşı 20 den büyüktür</p>
    }
    else if (@yas < 20)
    {
        <p>@ad ın yaşı 20 den büyüktür</p>


    }
    else
    {
        <p>@ad ın yaşı 20 ye eşittir</p>
    }
}

<!--
    Bir isimler arrayi bir de soyisimler arrayi olsun
-->
@{
    string[] adlar = { "Barkın", "Furkan" };
    string[] soyadlar = { "Şeber", "Özdemir" };

}

@for (int i = 0; i < adlar.Length; i++)
{
    <p>@adlar[i] @soyadlar[i]</p>

}

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < adlar.Length; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@adlar[i]</td>
                <td>@soyadlar[i]</td>
            </tr>
        }
    </tbody>
</table>


